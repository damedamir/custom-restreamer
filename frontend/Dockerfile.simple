FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Copy static files to standalone directory for proper serving
RUN cp -r .next/static .next/standalone/.next/static

# Expose port
EXPOSE 3000

# Start the application (use standalone server for proper static file serving)
CMD ["node", ".next/standalone/server.js"]