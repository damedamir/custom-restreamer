FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Use tsx to run TypeScript directly (no build step)
EXPOSE 3001

# Start the application with tsx
CMD ["npx", "tsx", "src/index.ts"]
