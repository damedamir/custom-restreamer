// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  streams Stream[]

  @@map("users")
}

model Stream {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  isLive      Boolean  @default(false)
  viewers     Int      @default(0)
  streamUrl   String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  config     StreamConfig?
  viewersLog ViewerLog[]

  @@map("streams")
}

model StreamConfig {
  id           String  @id @default(cuid())
  streamId     String  @unique
  stream       Stream  @relation(fields: [streamId], references: [id], onDelete: Cascade)
  
  // Branding
  brandColor   String  @default("#111827")
  logoUrl      String?
  overlayText  String?
  customCss    String?
  
  // Stream settings
  rtmpKey      String?
  hlsUrl       String?
  
  // Offline content
  offlineTitle    String?
  offlineMessage  String?
  offlineImageUrl String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("stream_configs")
}

model ViewerLog {
  id        String   @id @default(cuid())
  streamId  String
  stream    Stream   @relation(fields: [streamId], references: [id], onDelete: Cascade)
  ipAddress String?
  userAgent String?
  joinedAt  DateTime @default(now())
  leftAt    DateTime?

  @@map("viewer_logs")
}

model WebhookLog {
  id        String   @id @default(cuid())
  event     String   // 'start' | 'stop' | 'viewer_join' | 'viewer_leave'
  streamId  String?
  data      Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@map("webhook_logs")
}

enum Role {
  USER
  ADMIN
}
