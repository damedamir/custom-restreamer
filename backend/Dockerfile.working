FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy ALL source files (including src directory)
COPY . .

# Debug: List files to verify they were copied
RUN echo "=== Files in /app ===" && ls -la
RUN echo "=== Files in /app/src ===" && ls -la src/

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3001

# Start the application with tsx
CMD ["npx", "tsx", "src/index.ts"]
