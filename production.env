# Production Environment Variables for Restreamer Pro
# Copy this to .env on the server

# Database
DATABASE_URL="postgresql://postgres:password@postgres:5432/custom_restreamer"

# JWT Secret (change this to a secure random string in production)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"

# API Configuration
API_PORT=3001
FRONTEND_PORT=3000

# Domain Configuration
DOMAIN="hive.restreamer.website"
API_URL="http://hive.restreamer.website/api"
FRONTEND_URL="http://hive.restreamer.website"

# SRS Configuration
SRS_RTMP_URL="rtmp://hive.restreamer.website:1935/live"
SRS_API_URL="http://srs:1985/api"
SRS_WEBRTC_URL="http://srs:8000/rtc"

# Security
CORS_ORIGIN="http://hive.restreamer.website"
ALLOWED_ORIGINS="http://hive.restreamer.website,https://hive.restreamer.website"

# Logging
LOG_LEVEL="info"
NODE_ENV="production"
